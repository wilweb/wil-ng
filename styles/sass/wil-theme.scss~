// form field validations
.form-with-validation {
	label {
		margin-top:0.5em;
		font-size: 1.3em;
	}
  input {
    //display:inline;
    //float:left;
  }

  input.ng-valid.ng-dirty {
    color: $successText;
    border-color:  $successText;
  }
  
  input.ng-invalid.ng-dirty {
    color: $errorText;
    border-color:  $errorText;
  }

  img {
  	vertical-align: top;
  }
  // valid form field: display checkbox to LEFT of field;
  .form-field-valid {
    margin-left: 10px;
    display:inline-block;
    padding-bottom:10px;
  }

  // invalid form field: display message BELOW field  
  .form-field-invalid {
    p {
    	font-size: 1em;
      color: $errorText;

      &:last-child {
				margin-bottom: 1.5em;
      }
    }
  }

}

